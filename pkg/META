description = "Monotonic wall-clock time for OCaml"
version = "0.8.3"

package "os" (
  directory="os"
  description = "Mtime for native OS"
  version = "0.8.3"
  archive(byte) = "mtime.cma"
  archive(byte, plugin) = "mtime.cma"
  archive(native) = "mtime.cmxa"
  archive(native, plugin) = "mtime.cmxs"
  exists_if = "mtime.cma"

  package "top" (
    description = "Mtime native OS toplevel support"
    version = "0.8.3"
    requires = "mtime.os"
    archive(byte) = "mtime_top.cma"
    archive(byte, plugin) = "mtime_top.cma"
    archive(native) = "mtime_top.cmxa"
    archive(native, plugin) = "mtime_top.cmxs"
    exists_if = "mtime_top.cma"
  )
)

package "jsoo" (
  directory="jsoo"
  description = "Mtime for js_of_ocaml"
  version = "0.8.3"
  requires = "js_of_ocaml"
  archive(byte) = "mtime.cma"
  archive(byte, plugin) = "mtime.cma"
  archive(native) = "mtime.cmxa"
  archive(native, plugin) = "mtime.cmxs"
  exists_if = "mtime.cma"
)
